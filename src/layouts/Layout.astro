---
import "../assets/style/base.css";
import "../styles/main.css";
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";

export interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL("/opengraph.jpg", Astro.site).toString();

const { title, description } = Astro.props;
const makeTitle = `${title} | Beridoor Télikert`;
---

<!DOCTYPE html>
<html lang="hu">
  <head>
    <script is:inline>
      const htmlRootElement = document.getElementById("html-root");
      const lightModeEnabled = localStorage.getItem("lightMode");
      if (lightModeEnabled === "true") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
    </script>
    <link rel="apple-touch-icon" sizes="180x180" href="/beridoor-kft-astro/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/beridoor-kft-astro/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/beridoor-kft-astro/favicon-16x16.png" />
    <link rel="manifest" href="/beridoor-kft-astro/site.webmanifest" />
    <link rel="mask-icon" href="/beridoor-kft-astro/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#1f3864" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description={description}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: "Beridoor Kft. Télikertek építése egyedi igények szerint",
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Beridoor télikert",
        },
      }}
    />
  </head>
  <body class="dark:text-gray-100 dark:bg-beridoorDarkModeBg bg-white text-beridoorBlue">
    <div class="wrapper dark:text-gray-100 dark:bg-beridoorDarkModeBg bg-white text-beridoorBlue">
      <Navbar />
      <slot />
      <Footer />
      <style is:global>
        /* Improve Page speed */
        /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
        img {
          content-visibility: auto;
        }
      </style>
    </div>
    <style>
      html,
      body {
        width: 100%;
        height: 100%;
      }
      /* https://dev.to/niorad/keeping-the-footer-at-the-bottom-with-css-grid-15mf */
      .wrapper {
        min-height: 100%;
        display: grid;
        grid-template-rows: auto 1fr auto;
        grid-template-columns: 100%;
      }
    </style>
  </body>
</html>
