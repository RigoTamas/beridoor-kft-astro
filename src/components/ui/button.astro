---
interface Props {
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted";
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-6 py-3",
};

const styles = {
  outline: "border-2 dark:border-white border-beridoorBlue hover:bg-beridoorBlue hover:text-white",
  primary:
    "disabled:bg-gray-300 dark:disabled:bg-gray-500 dark:disabled:text-gray-300 bg-beridoorBlue dark:border-gray-300 text-white hover:bg-beridoorBlueLighter dark:border-2",
};
---

<button
  {...rest}
  class:list={[
    "rounded text-center transition",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</button>
