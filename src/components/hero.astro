---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import Carousel from './carousel.svelte'
import fs from 'fs'
import path from 'path'
const folderPath = 'src/assets/main-page-carousel-pictures'
const images = fs.readdirSync(folderPath).map((fileName) => ({src: path.join(folderPath, fileName), alt: fileName}))

---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <Carousel images={images} client:load/>
  <div class="py-6 md:order-1 hidden md:block">
  </div>
  <div>
    <h1
      class="text-1xl lg:text-3xl xl:text-4xl font-bold lg:tracking-tight xl:tracking-tighter">
     Télikertek építése egyedi igények szerint
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://web3templates.com/templates/astroship-starter-website-template-for-astro"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

        Download for Free
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/surjithctly/astroship"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub Repo
      </Link>
    </div>
  </div>
</main>
