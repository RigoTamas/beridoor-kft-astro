---
interface Props {
  title: string;
  children?: {
    title: string;
    path: string;
  }[];
  path?: string;
}
const { title, children } = Astro.props;
import { Dropdown as NavbarDropdown, DropdownItems } from "astro-navbar";
---

<li class="relative">
  <NavbarDropdown class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 lg:text-gray-100 lg:hover:text-white text-beridoorBlue hover:text-black dark:text-gray-100 dark:hover:text-white">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems class="dropdown-content">
      <div class:list={["lg:absolute w-full lg:w-48 z-10", "lg:left-0 origin-top-left"]}>
        <ul class="px-3 lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col">
          {
            children?.map((item) => (
              <a href={item.path} class="py-1 lg:dark:text-beridoorBlue lg:dark:hover:text-black text-beridoorBlue hover:text-black dark:text-gray-100 dark:hover:text-white">
                {item.title}
              </a>
            ))
          }
        </ul>
      </div>
    </DropdownItems>
  </NavbarDropdown>
</li>
