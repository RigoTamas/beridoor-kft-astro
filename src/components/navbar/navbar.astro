      { title: "Árnyékolás", path: "/portfolio#telikert" },
    ],
  },
  {
    title: "lakótér bővítés",
    children: [
      { title: "Design", path: "/portfolio#terasz" },
      { title: "Lakás bővítés", path: "/portfolio#szelfogo" },
    ],
  },
  {
    title: "napvédelem",
    children: [
      { title: "Ánryékolás", path: "/portfolio#szelfogo" },
      { title: "Napvitorla", path: "/portfolio#szelfogo" },
      { title: "Filagória", path: "/portfolio#terasz" },
      { title: "Pergola", path: "/portfolio#telikert" },
      { title: "Kocsibeálló", path: "/portfolio#medencefedes" },
    ],
  },
  {
    title: "rólunk",
    children: [
      { title: "Munkatársaink", path: "/about" },
      { title: "Sajtószoba", path: "/about" },
      { title: "Partnereink", path: "/about" },
      { title: "Építőanyagok", path: "/about" },
    ],
  },
  {
    title: "kapcsolat",
