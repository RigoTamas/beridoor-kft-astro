---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import BlazeSlider from './blaze-slider.astro'
import fs from 'fs'
import path from 'path'
const folderPath = 'src/assets/main-page-carousel-pictures'
const images = fs.readdirSync(folderPath).map((fileName) => ({src: path.join(folderPath, fileName), alt: fileName}))

---

<main
  class="grid place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div>
    <h1
      class="text-1xl lg:text-3xl xl:text-4xl font-bold lg:tracking-tight xl:tracking-tighter">
     Télikertek építése egyedi igények szerint
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        href="/portfolio"
        style="outline"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-[#1f3864] w-5 h-5" name="icon-park-outline:building-one" />

        Munkáink
      </Link>
      <Link
        size="lg"
        style="primary"
        href="/contact"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-white w-5 h-5" name="mdi:contact-mail" />
        Ajánlatkérés
      </Link>
    </div>
  </div>
</main>
<BlazeSlider images={images}/>
