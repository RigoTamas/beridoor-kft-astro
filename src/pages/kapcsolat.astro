---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Contactform from "@components/contactform.astro";

const phoneNumbers = [
  { name: "Iroda", number: "+36 30 931 4070" },
  { name: "Tervezés", number: "+36 20 931 4070" },
  { name: "Kivitelezés", number: "+36 20 205 0956" },
  { name: "Design", number: "+36 20 4929 969" },
];
---

<Layout title="Kapcsolat" description="Lépjen kapcsolatba a Beridoor Kft-vel és építtesse fel álmai télikertjét">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Kapcsolat</Fragment>
      <Fragment slot="desc">
        A részletes ajánlat elkészítéséhez kérjük mellékeljen fotót a szerkezet helyszínéről
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <div class="pt-[2px]">
          <div class="flex items-center mt-3 space-x-2">
            <Icon class="w-4 h-4" name="uil:map-marker" />
            <p>Beridoor Kft 2085 Pilisvörösvár, Budai út 7167/6</p>
          </div>
          <div class="flex items-center mt-3 space-x-2">
            <Icon class="w-4 h-4" name="uil:envelope" /><a href="mailto:beridoorkft@gmail.com">beridoorkft@gmail.com</a>
          </div>
          <div class="grid grid-cols-2 gap-3 max-w-xs mt-3">
            {
              phoneNumbers.map(({ name, number }) => (
                <>
                  <div class="flex items-center space-x-2 ">
                    <Icon class="w-4 h-4" name="uil:phone" />
                    <span>{name}</span>
                  </div>
                  <div class="space-x-2">
                    <a href={`tel:${number}`}>{number}</a>
                  </div>
                </>
              ))
            }
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
